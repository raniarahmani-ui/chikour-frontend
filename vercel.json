{
    "version": 2,
    "outputDirectory": "frontend/dist",
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.7.2",
            "includeFiles": "api/**"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/index.php"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/dist/$1",
            "check": true
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/dist/index.html"
        }
    ]
}